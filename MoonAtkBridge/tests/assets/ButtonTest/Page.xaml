<UserControl x:Class="ButtonTest.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="50" x:Name="textBlock">
                    0
                </TextBlock>
                <Button x:Name="button" Click="OnButtonClicked">
                    <TextBlock>Add 1</TextBlock>
                </Button>
            </StackPanel>

            <Button x:Name="disableButton" Click="OnDisableButtonClicked">
                <TextBlock>Toggle Sensitivity</TextBlock>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
