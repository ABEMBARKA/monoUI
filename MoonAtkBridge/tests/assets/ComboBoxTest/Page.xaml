<UserControl x:Class="ComboBoxTest.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="200">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Button Content="AccessKey" x:Name="button" />
        <ComboBox Width="100" Canvas.Left="85" x:Name="combobox" >
            <ComboBoxItem Content="Item 0" />
            <ComboBoxItem Content="Item 1" />
            <ComboBoxItem Content="Item 2" />
            <ComboBoxItem Content="Item 3" />
            <ComboBoxItem Content="Item 4" />
        </ComboBox>
        <ComboBox Width="100" Canvas.Left="85" Canvas.Top="30" x:Name="comboboxItemsSource" />
    </Canvas>
</UserControl>
