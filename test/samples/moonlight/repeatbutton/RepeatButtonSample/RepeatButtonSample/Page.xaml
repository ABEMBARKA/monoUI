<UserControl x:Class="RepeatButtonSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas x:Name="cnvLayoutRoot" Background="White">
        <TextBlock x:Name="label" Canvas.Top="20" Canvas.Left="30" Text="Not clicked yet."></TextBlock>
        <RepeatButton x:Name="repeatbutton" Click="RepeatButton_Click" Delay="1000" Interval="1000" 
                      Canvas.Top="60" Canvas.Left="30" Content="Show the time"></RepeatButton>
    </Canvas>
</UserControl>
