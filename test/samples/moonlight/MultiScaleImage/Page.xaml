<UserControl x:Class="MultiScaleImageSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="800" Height="600">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <MultiScaleImage x:Name="msi" Grid.Row="1" Grid.Column="4" Width="500" Height="500"  Margin="10,30,0,0" />
        <Button x:Name="button1" Content="ShowAllClick" Grid.Row="0" Grid.Column="0" Margin="10,10,0,0" Click="ShowAllClick" />
        <Button x:Name="button2" Content="ZoomInClick" Grid.Row="0" Grid.Column="1" Margin="10,10,0,0" Click="zoomInClick" />
        <Button x:Name="button3" Content="ZoomOutClick" Grid.Row="0" Grid.Column="2" Margin="10,10,0,0" Click="zoomOutClick" />
    </Grid>
</UserControl>
