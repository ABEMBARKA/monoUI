<UserControl x:Class="CheckBoxSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="CheckBox Demonstration" Grid.Row="0" Margin="0,20,10,20" FontFamily="Verdana" FontSize="18" FontWeight="Bold" Foreground="#FF5C9AC9" />
        <CheckBox x:Name="checkbox1" Grid.Row="1" Content="Two State CheckBox" Checked="HandleChecked" Unchecked="HandleUnchecked" Margin="5,0,0,0" />
        <TextBlock x:Name="text1" Text="text1" Grid.Row="2" Margin="5,0,0,0" />
        <CheckBox x:Name="checkbox2" Grid.Row="3" Content="Three State CheckBox" IsThreeState="True" Checked="HandleChecked" Indeterminate="HandleThirdState" Unchecked="HandleUnchecked" Margin="5,10,0,0" />
        <TextBlock x:Name="text2" Text="text2" Grid.Row="4" Margin="5,0,0,0" />
    </Grid>
</UserControl>
