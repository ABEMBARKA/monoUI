<UserControl x:Class="ScrollBarSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <TextBlock x:Name="textBlock1" Height="30" Margin="70,0,0,30" Text="Value of Horizontal: 0"/>
        <TextBlock x:Name="textBlock2" Height="30" Margin="70,30,0,0" Text="Value of Vertical: 0"/>
        <ScrollBar x:Name="hscrollBar" Orientation="Horizontal" ValueChanged="hscrollBar_ValueChanged" Height="10" Margin="0,0,17,0" VerticalAlignment="Bottom" SmallChange="1" LargeChange="10" Maximum="100"/>
        <ScrollBar x:Name="vscrollBar" Orientation="Vertical" ValueChanged="vscrollBar_ValueChanged" Width="10" Margin="0,0,0,17" HorizontalAlignment="Right" SmallChange="1" LargeChange="10" Maximum="100"/>
    </Grid>
</UserControl>
