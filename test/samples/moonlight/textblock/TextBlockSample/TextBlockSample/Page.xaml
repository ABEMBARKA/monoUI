<UserControl x:Class="TextBlockSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas Background="White">
        <TextBlock x:Name="label0" Text="simply TextBlock" FontSize="20" Foreground="Teal" Margin="10,20,0,0" />
        
        <TextBlock x:Name="textblock0"  FontFamily="Arial" Width="400" Text="sample with LinkBreak and Run" Margin="10,80,0,0">
            <LineBreak/>
            <Run Foreground="Maroon" FontFamily="Courier New" FontSize="24">line2</Run>
            <LineBreak/>
            <Run Foreground="Tan" FontFamily="Times New Roman" FontSize="18" FontStyle="Italic">line3</Run>
            <LineBreak/>
            <Run Foreground="SteelBlue" FontFamily="Verdana" FontSize="14" FontWeight="Bold">line4</Run>
        </TextBlock>
  
    </Canvas>
</UserControl>
