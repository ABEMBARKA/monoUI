<UserControl x:Class="ProgressBar.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <TextBlock x:Name="textBlock" Height="30" Margin="30,50,0,0" VerticalAlignment="Top" Text="It is 0 out of 100%."/>
        <Button x:Name="button" Height="20" Margin="300,50,0,0" VerticalAlignment="Top" Content="Button" Click="button_Click"/>
        <ProgressBar x:Name="progressBar" Height="20" Margin="30,100,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>