<UserControl x:Class="CustomControl.MyCustomControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="100" Height="100">
    <Grid x:Name="LayoutRoot" Background="Plum">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ScrollViewer>
			<ListBox x:Name="stackPanel" Grid.Column="0" Grid.Row="1" Background="Pink" ScrollViewer.VerticalScrollBarVisibility="Auto">
				
			</ListBox>
            <!--<StackPanel x:Name="stackPanel" Grid.Column="0" Grid.Row="1" Background="Pink" ScrollViewer.VerticalScrollBarVisibility="Auto">
            </StackPanel>-->
        </ScrollViewer>
    </Grid>
</UserControl>
