<UserControl x:Class="CustomControl.UselessControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:custom="clr-namespace:CustomControl"
    Width="150" Height="150">
    <Grid x:Name="LayoutRoot" Background="Pink" ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>4
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<custom:UselessRectangleControl Grid.Column="0" Grid.Row="0" Width="75" Height="75" ChildFill="Red" ChildSelectedFill="DarkRed"  />
		<custom:UselessEllipseControl Grid.Column="0" Grid.Row="1" Width="75" Height="75" ChildFill="Blue" ChildSelectedFill="DarkBlue"  />
		<custom:UselessEllipseControl Grid.Column="1" Grid.Row="0" Width="75" Height="75" ChildFill="Blue" ChildSelectedFill="DarkBlue"  />
		<custom:UselessRectangleControl Grid.Column="1" Grid.Row="1" Width="75" Height="75" ChildFill="Red" ChildSelectedFill="DarkRed"  />
	</Grid>
</UserControl>
