<UserControl x:Class="AnimationExample.Page"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 Width="240" Height="100">
    <UserControl.Resources>
        <Storyboard x:Name="storyBoard">
            <DoubleAnimation Storyboard.TargetName="button" 
                             Storyboard.TargetProperty="Width"
							 From="10"
                             To="200"
                             Duration="0:0:5">
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Canvas x:Name="LayoutRoot" Background="Pink" AutomationProperties.HelpText="SilverlightExample">
        <Button x:Name="button" 
                Canvas.Left="10" 
                Canvas.Top="10" 
                Content="Animated button"
                AutomationProperties.HelpText="AnimatedButton"/>
        <Button x:Name="initializeButton" 
                Canvas.Left="10" 
                Canvas.Top="45" 
                Content="Initialize event" 
                Click="initializeButton_Click" 
				Width="100"
                AutomationProperties.HelpText="InitializeButton" />
        <Button x:Name="changeWidthButton" 
                Canvas.Left="10" 
                Canvas.Top="70" 
                Content="Change width" 
                Click="changeWidthButton_Click"
				Width="100"
                AutomationProperties.HelpText="WidthButton" />
		<Button x:Name="changeEnabledButton" 
                Canvas.Left="120" 
                Canvas.Top="45" 
                Content="Change enabled" 
                Click="changeEnabledButton_Click"
				Width="100"
                AutomationProperties.HelpText="EnabledButton" />
		<Button x:Name="changeNameButton" 
                Canvas.Left="120" 
                Canvas.Top="70" 
                Content="Change name" 
                Click="changeNameButton_Click"
				Width="100"
                AutomationProperties.HelpText="NameButton" />
	</Canvas>
</UserControl>
